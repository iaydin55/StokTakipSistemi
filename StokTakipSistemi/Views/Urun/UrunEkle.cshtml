@model StokTakipSistemi.Models.Urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UrunEkle", "Urun", FormMethod.Post, new { enctype = "multipart/Form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                <label>Ad</label>
                <input type="text" name="Ad" class="form-control" />
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <input type="text" name="Aciklama" class="form-control" />
            </div>
            <div class="form-group">
                @Html.Label("Resim", new { @class = "control-label col-md-2" })
                <input type="file" name="File" class="form-control" />
            </div>
            <div class="form-group">
                <label>Fiyat</label>
                <input type="text" name="Fiyat" />
            </div>
            <div class="form-group">
                <label>Stok</label>
                <input type="text" name="Stok" />
            </div>


            <div class="form-group">
                @Html.Label("Popüler", new { @class = "control-label col-md-2" })
                @Html.EditorFor(x => x.Populer)
            </div>
            <div class="form-group">
                <label>Kategori</label>
                @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary" type="submit">Ekle</button>
            <a href="/Urun/Index">Ürün Listesi</a>
        </div>
    </div>
}