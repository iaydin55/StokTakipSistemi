@using StokTakipSistemi.Models
@model List < Sepet >
 @{
    ViewBag.Title = "HepsiniSatinAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="container">
        @using (Html.BeginForm("HepsiniSatinAl2", "Satis", FormMethod.Post, new { @class = "container" }))
        {
            foreach (var item in Model)
            {
                <div class="form-group">
                    <h5>ID:@Html.DisplayFor(x => item.Id)</h5>
                </div>

                <div class="form-group">
                    <h5>Ürün Adı:@Html.DisplayFor(x => item.Urun.Ad)</h5>
                </div>

                <div class="form-group">
                    <h5>Adet:@Html.DisplayFor(x => item.Adet)</h5>
                </div>

                <div class="form-group">
                    <h5>Fiyat:@Html.DisplayFor(x => item.Fiyat)</h5>
                </div>
                <div class="form-group">
                    <h5>Resim:<img src="~/Content/Images/@item.Urun.Resim" width="50" height="50" /></h5>
                </div>
            }
            <p style="color:red; text-align:center;">@ViewBag.Tutar</p>

            <div class="container">
                <div class="form-group" style="float:left">
                    <button class="btn btn-success" >Onay</button>
                </div>

                <div style="float:right">
                    <a href="~/Views/Sepet/Index" class="btn btn-danger">İptal</a>
                </div>
            </div>
        }
    </div>
</div>
